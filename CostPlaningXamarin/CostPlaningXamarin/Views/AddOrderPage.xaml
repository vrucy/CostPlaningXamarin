            <Label Text="enter order price:" />
            <inputLayout:SfTextInputLayout >
                <Entry Placeholder="Price:" ClearButtonVisibility="WhileEditing" Text ="{Binding Cost}" Keyboard="Numeric"/>
            </inputLayout:SfTextInputLayout>
            <Picker ItemDisplayBinding="{Binding Name}" Title="Category" ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}"/>
            <inputLayout:SfTextInputLayout Hint="Description" >
                <Entry Text="{Binding Order.Description}"/>
            </inputLayout:SfTextInputLayout>
            <sf:SfDatePicker PickerMode="Dialog" x:Name="DatePicer" HeaderText="Select date" Date="{Binding PreviusDate}"/>
            <Button Clicked="OpenPicer" Text="Previus order date"/>
            <Button Text="Submit" VerticalOptions="EndAndExpand" 
            Command="{Binding SubmitCommand}" 
                    
            TextColor="White"
            BackgroundColor="Teal"
            FontSize="40"/>
